L = 11; 
Nx = 100; 
T1 = 100; 
T2 = 20;
k = 1; 
Q = 10; 


dx = L / (Nx - 1);
x = linspace(0, L, Nx);
dt = 0.001;
t_final = 1;
Nt = ceil(t_final / dt);

 
T = zeros(Nx, 1);
T(1) = T1;
T(end) = T2;


for t = 1:Nt
    T_old = T;
    for i = 2:Nx-1
        T(i) = T_old(i) + k * dt / dx^2 * (T_old(i+1) - 2*T_old(i) + T_old(i-1)) - Q * dt;
    end
end
plot(x, T);
xlabel('Position');
ylabel('Temperature');
title('Temperature distribution in counter flow heat conduction');
